<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <ImageView
        android:id="@+id/ImageVPosterFav"
        android:layout_width="100dp"
        android:layout_height="140dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TextVTituloFav"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/TextVDataFav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toEndOf="@id/ImageVPosterFav"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"
        tools:text="Titulo do filme" />

    <TextView
        android:id="@+id/TextVDataFav"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/ImageVPosterFav"
        app:layout_constraintEnd_toEndOf="@id/TextVTituloFav"
        app:layout_constraintStart_toStartOf="@id/TextVTituloFav"
        app:layout_constraintTop_toBottomOf="@id/TextVTituloFav"
        tools:text="2022" />

    <RatingBar
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ImageVPosterFav"
        app:layout_constraintTop_toBottomOf="@id/TextVDataFav"/>

</androidx.constraintlayout.widget.ConstraintLayout>